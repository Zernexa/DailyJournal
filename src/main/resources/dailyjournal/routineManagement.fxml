<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dailyjournal.RoutineEditController">
   <content>
      <AnchorPane minHeight="400.0" prefHeight="720.0" prefWidth="1280.0">
         <children>
            <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="backBtn" mnemonicParsing="false" onAction="#onBack" prefHeight="26.0" prefWidth="100.0" text="Back" />
                        <TextField fx:id="newRoutineField" onAction="#onAddRoutine" prefHeight="26.0" promptText="New routine name..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="addBtn" mnemonicParsing="false" onAction="#onAddRoutine" prefHeight="26.0" prefWidth="100.0" text="Add" />
                     </children>
                  </HBox>
                  <ListView fx:id="routineListView" editable="true" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </content>
   <stylesheets>
      <URL value="@style.css" />
   </stylesheets>
</ScrollPane>
